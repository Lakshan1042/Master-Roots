@model Master_Roots.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1 class="page-title">Student Details</h1>

<div class="student-details-card">
    <div class="student-photo">
        <!-- Replace with dynamic image if you have it -->
        <img src="~/images/default-student.png" alt="Student Photo" />
    </div>

    <div class="student-info">
        <h2>@Model.Name</h2>
        <hr />
        <dl>
            <dt>Standard</dt>
            <dd>@Model.Standard</dd>

            <dt>Section</dt>
            <dd>@Model.Section</dd>

            <dt>Age</dt>
            <dd>@Model.Age</dd>

            <dt>Gender</dt>
            <dd>@Model.Gender</dd>

            <dt>Father's Name</dt>
            <dd>@Model.Father_Name</dd>

            <dt>Father's Mobile</dt>
            <dd>@Model.Father_Mobile_Number</dd>

            <dt>Mother's Name</dt>
            <dd>@Model.Mother_Name</dd>

            <dt>Mother's Mobile</dt>
            <dd>@Model.Mother_Mobile_Number</dd>

            <dt>Address</dt>
            <dd>@Model.Address</dd>

            <dt>Blood Group</dt>
            <dd>@Model.Blood_Group</dd>
        </dl>
        <div class="actions">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn">Edit</a>
            <a asp-action="Index" class="btn secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        font-size: 28px;
        color: #333;
    }

    .student-details-card {
        display: flex;
        gap: 30px;
        max-width: 900px;
        margin: 0 auto;
        padding: 25px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .student-photo {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .student-photo img {
            width: 180px;
            height: 180px;
            border-radius: 8px;
            object-fit: cover;
            border: 2px solid #ddd;
        }

    .student-info {
        flex: 2;
    }

        .student-info h2 {
            margin-top: 0;
            font-size: 24px;
            color: #2c3e50;
        }

    dl {
        display: grid;
        grid-template-columns: 150px auto;
        row-gap: 10px;
        column-gap: 20px;
        margin: 20px 0;
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        margin: 0;
        color: #333;
    }

    .actions {
        margin-top: 20px;
    }

    .btn {
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 6px;
        background: #007bff;
        color: #fff;
        transition: background 0.3s;
    }

        .btn:hover {
            background: #0056b3;
            color: white
        }

        .btn.secondary {
            background: #6c757d;
            color: white;
            margin-left: 10px;
        }

            .btn.secondary:hover {
                background: #545b62;
            }
</style>
